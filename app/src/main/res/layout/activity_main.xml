<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="end"
    tools:context=".Information">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.05"
        android:textSize="20dp"
        android:text="Choose the series you want:" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25">

        <RadioButton
            android:id="@+id/Arithmetic"
            android:checked="true"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Arithmetic Series" />

        <RadioButton
            android:id="@+id/Geometric"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Geometric Series" />

    </RadioGroup>

    <EditText
        android:id="@+id/first_num"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.275"
        android:hint="Enter the first limb"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />

    <EditText
        android:id="@+id/Diff_Multi"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:hint="Enter the difference or the multiply number"
        android:layout_weight="0.275"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:onClick="Info_Next"
        android:layout_weight="0.1"
        android:text="Next" />

</LinearLayout>